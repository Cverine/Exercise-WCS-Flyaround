{% extends '@WCSCoav/base.html.twig' %}

{% block body %}
    <h2>Our Planemodels</h2>
    <div class="row">
        {% for planeModel in planeModels %}
            <div class="col-md-3 flightInfo">
                <div class="flightHeader">
                    <h3>{{ planeModel.model }}</h3>
                </div>
                <div class="flightBody">
                    <h3>{{ planeModel.manufacturer }}</h3>
                </div>
                <div class="flightFooter">
                    <div class="col-md-6"><a href="{{ path('planemodel_show', { 'id': planeModel.id }) }}"><i
                                    class="fa fa-plus-circle" aria-hidden="true"></i></a></div>
                    <div class="col-md-6"><a href="{{ path('planemodel_edit', { 'id': planeModel.id }) }}"><i
                                    class="fa fa-pencil-square-o" aria-hidden="true"></i></a></div>
                </div>
            </div>
        {% endfor %}
    </div>
    <h2>Create a new planeModel<a href="{{ path('planemodel_new') }}"><i class="fa fa-angle-double-right"
                                                                         aria-hidden="true"></i></a></h2>
{% endblock %}
