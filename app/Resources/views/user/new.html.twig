{% extends '@WCSCoav/base.html.twig' %}

    {% block body %}
        {{ form_start(form) }}
        <h2>Sign In</h2>
        <div class="col-md-10 col-md-offset-1 editFlightBody">
            <div class="form-group col-md-4 col-md-offset-1">
                <h3>{{ form_label(form.userName) }}</h3>
                {{ form_errors(form.userName) }}
                {{ form_widget(form.userName) }}
            </div>
            <div class="form-group col-md-4 col-md-offset-1">
                <h3>{{ form_label(form.password, "Choose a Password") }}</h3>
                {{ form_errors(form.password) }}
                {{ form_widget(form.password) }}
            </div>
            <div class="form-group col-md-4 col-md-offset-1">
                <h3>{{ form_label(form.firstName, "First Name") }}</h3>
                {{ form_errors(form.firstName) }}
                {{ form_widget(form.firstName) }}
            </div>
            <div class="form-group col-md-4 col-md-offset-1">
                <h3>{{ form_label(form.lastName, "Last Name") }}</h3>
                {{ form_errors(form.lastName) }}
                {{ form_widget(form.lastName) }}
            </div>
            <div class="form-group col-md-4 col-md-offset-1">
                <h3>{{ form_label(form.email, "Email") }}</h3>
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            <div class="form-group col-md-4 col-md-offset-1">
                <h3>{{ form_label(form.phoneNumber, "Phone Number") }}</h3>
                {{ form_errors(form.phoneNumber) }}
                {{ form_widget(form.phoneNumber) }}
            </div>
            <div class="form-group col-md-4 col-md-offset-1">
                <h3>{{ form_label(form.birthDate, "Birth Date") }}</h3>
                {{ form_errors(form.birthDate) }}
                {{ form_widget(form.birthDate) }}
            </div>
            <div class="form-group col-md-4 col-md-offset-1">
                <h3>{{ form_label(form.role, "Are you a pilot or a traveler ? If both, choose 'Pilot'") }}</h3>
                {{ form_errors(form.role) }}
                {{ form_widget(form.role) }}

            </div>
            <div class="form-group col-md-2 col-md-offset-6">
                <h3>{{ form_label(form.isACertifiedPilot, "Are you a certified Pilot ?") }}</h3>
                {{ form_errors(form.isACertifiedPilot) }}
                {{ form_widget(form.isACertifiedPilot) }}
            </div>
            <div class="form-group col-md-2 col-md-offset-1">
                <h3>{{ form_label(form.isActive, "Are you an active Pilot ?") }}</h3>
                {{ form_errors(form.isActive) }}
                {{ form_widget(form.isActive) }}
            </div>
            <div class="form-group col-md-4 col-md-offset-1">
                {{ form_widget(form.creationDate, {'attr': {
                    'class': "hidden"
                } }) }}
            </div>
        </div>
        <div class="flightFooter col-md-10 col-md-offset-1">
            <input type="submit" value="Create"/>
            <a href="{{ path('user_index') }}">Back to the list</a>
        </div>
        {{ form_end(form) }}

    {% endblock %}
