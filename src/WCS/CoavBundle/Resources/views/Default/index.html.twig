{% extends '@WCSCoav/base.html.twig' %}

{% block body %}

    <h2>All FlyAround</h2>
    <div class="container-index">
        <div class="block-title">
            <h3>Next Flights</h3>
            <a href="{{ path('flight_index') }}">All Flights</a>
        </div>

        <div class="blockDetail">
            {% for flight in flights %}
                <ul>
                    <li class="title">{{ flight.departTerrain }} / {{ flight.arrivalTerrain }}</li>
                    <li>Date : {{ flight.takeOffTime|date('d M Y') }}</li>
                    <li>D : {{ flight.takeOffTime|date('H:i') }} </li>
                    <li>A : {{ flight.landingTime|date('H:i') }} </li>
                    <li>Price : {{ flight.seatPrice }} $USD</li>
                </ul>
            {% endfor %}
        </div>
        <div class="blockFooter">
            {% for flight in flights %}
                <ul>
                    <li><a href="{{ path('flight_show', { 'id': flight.id }) }}"><i class="fa fa-globe"
                                                                                    aria-hidden="true"></i></a></li>
                </ul>
            {% endfor %}
        </div>
    </div>


    <div class="container-index">
        <div class="block-title">
            <h3>All Plane Models</h3>
        </div>

        <div class="planeDetail">
            {% for planeModel in models %}
                <ul>
                    <li class="title">{{ planeModel.model }}</li>
                    <li>Manufacturer : {{ planeModel.manufacturer }}</li>
                    <li>Cruise Speed : {{ planeModel.cruiseSpeed }} mph</li>
                    <li>Seats : {{ planeModel.planeNbSeats }} </li>
                </ul>
            {% endfor %}
        </div>
        <div class="blockFooter">
            {% for planeModel in models %}
                <ul>
                    <li><a href="{{ path('planemodel_show', { 'id': planeModel.id }) }}"><i class="fa fa-plane"
                                                                                    aria-hidden="true"></i></a></li>
                </ul>
            {% endfor %}
        </div>
    </div>

    <div class="container-index">
        <div class="block-title">
            <h3>All Airports</h3>
        </div>

        <div class="terrainDetail">
            {% for terrain in terrains %}
                <ul>
                    <li class="title">{{ terrain.name }}</li>
                    <li>Icao : {{ terrain.icao }}</li>
                    <li>Address : {{ terrain.address }} - {{ terrain.city }} </li>
                    <li>Latitude : {{ terrain.latitude }} </li>
                    <li>Longitude : {{ terrain.longitude }} </li>
                </ul>
            {% endfor %}
        </div>
        <div class="blockFooter">
            {% for terrain in terrains %}
                <ul>
                    <li><a href="{{ path('terrain_show', { 'id': terrain.id }) }}"><i class="fa fa-map-marker" aria-hidden="true"></i></a></li>
                </ul>
            {% endfor %}
        </div>
    </div>

{% endblock %}
